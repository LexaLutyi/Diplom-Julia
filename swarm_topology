using LightGraphs
using GraphPlot

agents_amt = 6

G = SimpleDiGraph(agents_amt)
add_edge!(G, 1, 2)
add_edge!(G, 2, 3)
add_edge!(G, 3, 4)
add_edge!(G, 4, 2)
add_edge!(G, 3, 6)
add_edge!(G, 1, 5)
add_edge!(G, 5, 6)
gplot(G, nodelabel=1:6)

L = laplacian_matrix(G)

λ = real(laplacian_spectrum(G))
μ = filter(p-> ~isapprox(p, 0.0; atol=eps(Float64), rtol=0), λ)

c = 1. / min(μ...)
